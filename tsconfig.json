        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": "src_ts",
        "outFile": "./dist/game.js",
        "sourceMap": true
    },
    "include": [
        "src_ts/**/*"
    ],
